<% include ../partials/header.ejs %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">
			Edit Form
		</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="text" name="campground[text]" value="<%= campground.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="price" name="campground[price]" min="0.01" step="0.01" value="<%= campground.price %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="author" value="<%= campground.image%>">			
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]" placeholder="author" value="<%= campground.description%>">			
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit!
					</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
		
	</div>
</div>
<% include ../partials/footer.ejs %>